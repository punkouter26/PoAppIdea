@page "/session/{SessionId:guid}/artifacts"
@page "/session/{SessionId:guid}/complete"
@using PoAppIdea.Core.Enums
@using PoAppIdea.Web.Features.Artifacts
@using PoAppIdea.Web.Components.Shared
@using Radzen
@using Radzen.Blazor
@inject ArtifactService ArtifactService
@inject NavigationManager Navigation
@inject NotificationService NotificationService

<PageTitle>Artifacts - PoAppIdea</PageTitle>

<SessionBreadcrumb SessionId="SessionId" CurrentPhase="SessionPhase.Phase6_Visual" />
<SessionProgress SessionId="SessionId" CurrentPhase="SessionPhase.Phase6_Visual" />

<div class="artifacts-page">
    <div class="page-header">
        <h1>ðŸ“„ Your Artifacts</h1>
        <p class="subtitle">Your complete product documentation package</p>
    </div>

    @if (_isLoading)
    {
        <RadzenStack Gap="1.5rem">
             <SkeletonLoader Variant="SkeletonLoader.SkeletonVariant.Card" Count="1" ThinkingText="Loading your workspace..." />
             <SkeletonLoader Variant="SkeletonLoader.SkeletonVariant.List" Count="6" />
        </RadzenStack>
    }
    else if (_error is not null)
    {
        <RadzenAlert AlertStyle="AlertStyle.Danger" ShowIcon="true" Variant="Variant.Flat">
            @_error
        </RadzenAlert>
        <RadzenButton Text="Retry" Click="@LoadArtifactsAsync" class="retry-button" />
    }
    else if (_artifacts is null || _artifacts.Count == 0)
    {
        <div class="empty-state storytelling">
             <div class="blueprint-animation">
                <RadzenIcon Icon="architecture" class="blueprint-icon main" />
                <RadzenIcon Icon="edit_note" class="blueprint-icon pen" />
             </div>
            <RadzenText TextStyle="TextStyle.H4">The Blueprint Awaits</RadzenText>
            <RadzenText TextStyle="TextStyle.Body1" class="rz-mb-6">Your session has evolved. Now, transform these concepts into production-ready blueprints. Each artifact is cross-referenced with your genetic preferences.</RadzenText>
            <RadzenButton Text="Manifest Artifacts" 
                          Icon="auto_awesome" 
                          ButtonStyle="ButtonStyle.Primary"
                          Size="ButtonSize.Large"
                          IsBusy="_isGenerating"
                          Click="@GenerateArtifactsAsync"
                          class="manifest-button" />
        </div>
    }
    else
    {
        <div class="generation-status">
            @if (_generationStatus is not null && _generationStatus.Status != ArtifactGenerationStatus.Completed)
            {
                <RadzenProgressBar Value="@((_generationStatus.GeneratedCount / 3.0) * 100)" 
                                   ShowValue="true" 
                                   ProgressBarStyle="ProgressBarStyle.Primary"
                                   class="generation-progress" />
                <p class="status-text">
                    @(_generationStatus.Status switch
                    {
                        ArtifactGenerationStatus.Completed => "All artifacts generated!",
                        ArtifactGenerationStatus.InProgress => $"Generating... {_generationStatus.GeneratedCount}/3 complete",
                        ArtifactGenerationStatus.Queued => "Generation queued...",
                        _ => "Unknown status"
                    })
                </p>
            }
            else
            {
                <RadzenAlert AlertStyle="AlertStyle.Success" ShowIcon="true" Variant="Variant.Flat">
                    <strong>All artifacts generated!</strong> Your product documentation is ready.
                </RadzenAlert>
            }
        </div>

        <div class="artifacts-grid">
            @foreach (var artifact in _artifacts)
            {
                <div class="artifact-card @(artifact.Type.ToString().ToLower())">
                    <div class="artifact-header">
                        <RadzenIcon Icon="@GetArtifactIcon(artifact.Type)" class="artifact-icon" />
                        <div class="artifact-info">
                            <h3>@GetArtifactTypeName(artifact.Type)</h3>
                            <span class="artifact-date">@artifact.CreatedAt.ToString("MMM dd, yyyy")</span>
                        </div>
                    </div>
                    <p class="artifact-title">@artifact.Title</p>
                    <div class="artifact-actions">
                        <RadzenButton Text="View" 
                                      Icon="visibility" 
                                      ButtonStyle="ButtonStyle.Light"
                                      Size="ButtonSize.Small"
                                      Click="@(() => ViewArtifact(artifact))" />
                        <RadzenButton Text="Download" 
                                      Icon="download" 
                                      ButtonStyle="ButtonStyle.Secondary"
                                      Size="ButtonSize.Small"
                                      Click="@(() => DownloadArtifact(artifact))" />
                    </div>
                    @if (artifact.IsPublished)
                    {
                        <span class="published-badge">
                            <RadzenIcon Icon="public" /> Published
                        </span>
                    }
                </div>
            }
        </div>

        @if (_selectedArtifact is not null)
        {
            <div class="artifact-viewer-container">
                <div class="viewer-header">
                    <h2>@_selectedArtifact.Title</h2>
                    <RadzenButton Icon="close" 
                                  ButtonStyle="ButtonStyle.Light" 
                                  Size="ButtonSize.Small"
                                  Click="@CloseViewer" />
                </div>
                <ArtifactViewer Artifact="_selectedArtifact" />
            </div>
        }

        <div class="action-bar">
            <RadzenButton Text="Back to Session" 
                          Icon="arrow_back" 
                          ButtonStyle="ButtonStyle.Light"
                          Click="@BackToSession" />
            <RadzenButton Text="Start New Session" 
                          Icon="add" 
                          ButtonStyle="ButtonStyle.Primary"
                          Click="@StartNewSession" />
        </div>
    }
</div>

@code {
    [Parameter]
    public Guid SessionId { get; set; }

    private IReadOnlyList<ArtifactResponseDto>? _artifacts;
    private GenerateArtifactsResponse? _generationStatus;
    private ArtifactResponseDto? _selectedArtifact;
    private bool _isLoading = true;
    private bool _isGenerating;
    private string? _error;

    protected override async Task OnInitializedAsync()
    {
        await LoadArtifactsAsync();
    }

    private async Task LoadArtifactsAsync()
    {
        _isLoading = true;
        _error = null;
        StateHasChanged();

        try
        {
            _artifacts = await ArtifactService.GetArtifactsAsync(SessionId);
            _generationStatus = await ArtifactService.GetGenerationStatusAsync(SessionId);
        }
        catch (Exception ex)
        {
            _error = ex.Message;
        }
        finally
        {
            _isLoading = false;
            StateHasChanged();
        }
    }

    private async Task GenerateArtifactsAsync()
    {
        _isGenerating = true;
        StateHasChanged();

        try
        {
            _generationStatus = await ArtifactService.GenerateArtifactsAsync(
                SessionId,
                new GenerateArtifactsRequest());

            await LoadArtifactsAsync();

            NotificationService.Notify(new NotificationMessage
            {
                Severity = NotificationSeverity.Success,
                Summary = "Artifacts Generated",
                Detail = "Your product documentation is ready!",
                Duration = 5000
            });
        }
        catch (Exception ex)
        {
            NotificationService.Notify(new NotificationMessage
            {
                Severity = NotificationSeverity.Error,
                Summary = "Generation Failed",
                Detail = ex.Message,
                Duration = 5000
            });
        }
        finally
        {
            _isGenerating = false;
            StateHasChanged();
        }
    }

    private void ViewArtifact(ArtifactResponseDto artifact)
    {
        _selectedArtifact = artifact;
        StateHasChanged();
    }

    private void CloseViewer()
    {
        _selectedArtifact = null;
        StateHasChanged();
    }

    private void DownloadArtifact(ArtifactResponseDto artifact)
    {
        Navigation.NavigateTo($"/api/artifacts/{artifact.Id}/download", forceLoad: true);
    }

    private void BackToSession()
    {
        Navigation.NavigateTo($"/session/{SessionId}/visual");
    }

    private void StartNewSession()
    {
        Navigation.NavigateTo("/session/new");
    }

    private static string GetArtifactIcon(ArtifactType type) => type switch
    {
        ArtifactType.PRD => "description",
        ArtifactType.TechnicalDeepDive => "architecture",
        ArtifactType.VisualAssetPack => "palette",
        _ => "article"
    };

    private static string GetArtifactTypeName(ArtifactType type) => type switch
    {
        ArtifactType.PRD => "Product Requirements Document",
        ArtifactType.TechnicalDeepDive => "Technical Deep-Dive",
        ArtifactType.VisualAssetPack => "Visual Asset Pack",
        _ => "Document"
    };
}

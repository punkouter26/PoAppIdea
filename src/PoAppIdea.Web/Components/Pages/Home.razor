@page "/"
@using Microsoft.AspNetCore.Authorization
@attribute [AllowAnonymous]

<PageTitle>PoAppIdea - The Self-Evolving Ideation Platform</PageTitle>

<div class="home-hero animate-fade-in" style="padding: var(--space-2xl) 0;">
    <RadzenStack Gap="0.5rem" class="rz-mb-8" Style="max-width: 720px;">
        <RadzenText TextStyle="TextStyle.DisplayH3" TagName="TagName.H1" Style="letter-spacing: -0.03em; line-height: 1.1;">
            Build the <span style="background: linear-gradient(135deg, var(--app-primary), var(--app-accent)); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">Future</span> of your ideas.
        </RadzenText>
        <RadzenText TextStyle="TextStyle.Subtitle1" Style="max-width: 600px; color: var(--text-secondary); font-size: 1.125rem; line-height: 1.7;">
            PoAppIdea is a self-evolving ideation engine that transforms vague sparks into polished product documentation using genetic algorithms and high-fidelity AI.
        </RadzenText>
    </RadzenStack>

    <div class="bento-grid">
        <div class="bento-item large">
            <div>
                <RadzenIcon Icon="rocket_launch" class="bento-icon" />
                <RadzenText TextStyle="TextStyle.H4" Style="margin-bottom: var(--space-sm);">Start Evolving</RadzenText>
                <RadzenText TextStyle="TextStyle.Body1" Style="color: var(--text-secondary);">Begin a new ideation session and watch your product concept take shape through AI-guided refinement.</RadzenText>
            </div>
            <RadzenButton Text="Launch Engine" Icon="play_arrow" ButtonStyle="ButtonStyle.Primary" 
                          Size="ButtonSize.Large" class="rz-mt-4 glow-button" Click="@(() => Navigation.NavigateTo("/session/new"))" />
        </div>

        <div class="bento-item tall">
            <div>
                <RadzenIcon Icon="swipe" class="bento-icon" />
                <RadzenText TextStyle="TextStyle.H5" Style="margin-bottom: var(--space-sm);">Genetic Swipe</RadzenText>
                <RadzenText TextStyle="TextStyle.Body2" Style="color: var(--text-secondary);">Feed the AI your preferences by swiping on ideas. The system learns what you love and mutates the next generation.</RadzenText>
            </div>
            <div class="caption rz-mt-2">Phase 1: Spark</div>
        </div>

        <div class="bento-item">
            <RadzenIcon Icon="photo_library" class="bento-icon" />
            <RadzenText TextStyle="TextStyle.H6">Discovery</RadzenText>
            <RadzenButton Icon="explore" ButtonStyle="ButtonStyle.Light" Variant="Variant.Text" 
                          Click="@(() => Navigation.NavigateTo("/gallery"))" Text="Browse Gallery" />
        </div>

        <div class="bento-item">
            <RadzenIcon Icon="history" class="bento-icon" />
            <RadzenText TextStyle="TextStyle.H6">My Work</RadzenText>
            <RadzenButton Icon="folder" ButtonStyle="ButtonStyle.Light" Variant="Variant.Text" 
                          Click="@(() => Navigation.NavigateTo("/sessions"))" Text="View Sessions" />
        </div>

        <div class="bento-item wide">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="2rem">
                <RadzenIcon Icon="auto_awesome" class="bento-icon" style="margin-bottom: 0;" />
                <div>
                    <RadzenText TextStyle="TextStyle.H5" Style="margin-bottom: var(--space-xs);">High-Fidelity Artifacts</RadzenText>
                    <RadzenText TextStyle="TextStyle.Body2" Style="color: var(--text-secondary);">Generate production-ready PRDs, technical deep dives, and visual asset packs automatically.</RadzenText>
                </div>
            </RadzenStack>
        </div>
    </div>
</div>

@code {
    [Inject]
    private NavigationManager Navigation { get; set; } = default!;
}

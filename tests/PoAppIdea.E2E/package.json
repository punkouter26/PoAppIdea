{
  "name": "poappidea-e2e",
  "version": "1.0.0",
  "description": "Playwright E2E tests for PoAppIdea - Chromium and Mobile only",
  "scripts": {
    "test": "npx playwright test",
    "test:smoke": "npx playwright test tests/api-health.spec.ts tests/home.spec.ts tests/session.spec.ts --project=chromium",
    "test:regression": "npx playwright test",
    "test:headed": "npx playwright test --headed",
    "test:debug": "npx playwright test --debug",
    "test:ui": "npx playwright test --ui",
    "test:chromium": "npx playwright test --project=chromium",
    "test:mobile": "npx playwright test --project='Mobile Chrome'",
    "codegen": "npx playwright codegen https://localhost:5001",
    "report": "npx playwright show-report"
  },
  "devDependencies": {
    "@playwright/test": "^1.50.0",
    "@types/node": "^22.0.0",
    "typescript": "^5.7.0"
  }
}
